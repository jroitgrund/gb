    "prettier:fix":
      "find . \\( -name \"*.json\" -or -name \"*.js\" -or -name \".ts\" \\) -not -path \"./node_modules/*\" -exec node_modules/.bin/prettier --write {} +",
    "prettier:check":
      "find . \\( -name \"*.json\" -or -name \"*.js\" -or -name \".ts\" \\) -not -path \"./node_modules/*\" -exec node_modules/.bin/prettier -l {} +",
    "tslint:check": "tslint src/**/*.ts",
    "tslint:fix": "tslint --fix src/**/*.ts",
    "lint:check": "npm-run-all -p eslint:check prettier:check tslint:check",
    "lint:fix": "npm-run-all -p eslint:fix prettier:fix tslint:fix"
  },
  "devDependencies": {
    "@types/source-map": "^0.5.7",
    "awesome-typescript-loader": "^5.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "html-webpack-harddisk-plugin": "^0.2.0",
    "html-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.4",
    "source-map": "^0.7.3",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "typestyle": "^2.0.1",
    "webpack": "^4.12.0",
